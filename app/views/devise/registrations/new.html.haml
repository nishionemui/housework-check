.account-page
  .account-page__top
    .account-page__top__header
      %h2 アカウントの作成
      -# = render "devise/shared/links"
    .account-page__top--right.user-form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          .field-label
            = f.label :名前
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
        .field
          .field-label
            = f.label :パスワード
            %i (英数字8文字以上)
          .field-input
            = f.password_field :password, autocomplete: "off"
        .field
          .field-label
            = f.label :パスワード
            %i (確認用)
          .field-input
            = f.password_field :password_confirmation, autocomplete: "off"
        .actions
          = f.submit "決定", class: 'btn'
